<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment"
    android:background="@drawable/group14">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_1"
            android:layout_gravity="center"></ImageView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle15"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"></ImageView>
        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Name"
            android:textColor="#19b4b8"
            android:textSize="25dp"
            android:id="@+id/name"
            android:layout_marginLeft="80dp"
            android:layout_height="wrap_content"/>
        <TextView

            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="open-sans"
            android:layout_marginLeft="80dp"
            android:textColor="#FFFFFF"
            android:layout_below="@id/name"
            android:text="99620898edwedwdwedd"
            android:id="@+id/nametxt"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:textSize="25dp"
            android:layout_marginBottom="20dp"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_below="@id/nametxt"
                android:text="Probe ID"
                android:textColor="#19b4b8"
                android:textSize="25dp"
                android:id="@+id/probe_id"
                android:layout_marginLeft="80dp"
                android:layout_height="wrap_content"/>
            <TextView

                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:fontFamily="open-sans"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="80dp"

                android:layout_below="@id/probe_id"
                android:text="99620898edwedwdwedd"
                android:id="@+id/probe_idtxt"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:textSize="25dp"
                android:layout_marginBottom="20dp"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_below="@id/probe_idtxt"
                android:text="College"
                android:textColor="#19b4b8"
                android:textSize="25dp"
                android:id="@+id/college"
                android:layout_marginLeft="80dp"
                android:layout_height="wrap_content"/>
            <TextView

                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:fontFamily="open-sans"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="80dp"

                android:layout_below="@id/college"
                android:text="99620898edwedwdwedd"
                android:id="@+id/collegetxt"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:textSize="25dp"
                android:layout_marginBottom="20dp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_below="@id/collegetxt"
                android:text="Department:"
                android:textColor="#19b4b8"
                android:textSize="25dp"
                android:id="@+id/department"
                android:layout_marginLeft="80dp"
                android:layout_height="wrap_content"/>
            <TextView

                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:fontFamily="open-sans"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="80dp"
                android:layout_below="@id/department"
                android:text="99620898edwedwdwedd"
                android:id="@+id/departmenttxt"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:textSize="25dp"
                android:layout_marginBottom="20dp"></TextView>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>